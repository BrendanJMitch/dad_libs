<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DadLibs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Splash screen background -->
        <item name="android:windowSplashScreenBackground">?attr/colorPrimary</item>

        <!-- Icon shown in the splash -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_splash</item>

        <!-- Optional: duration -->
        <item name="android:windowSplashScreenAnimationDuration">200</item> <!-- ms -->

    </style>
</resources>