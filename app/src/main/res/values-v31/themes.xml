<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DadLibs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryVariant">@color/magenta_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog.Rounded</item>

        <item name="android:windowSplashScreenBackground">?attr/colorPrimary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
    </style>
</resources>